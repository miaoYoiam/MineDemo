<?xml version="1.0" encoding="utf-8"?>
<com.example.minedemo.widget.LuckyDrawChildWidget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lucky_child_root"
    android:layout_width="70dp"
    android:layout_height="52dp"
    android:background="@color/bg_D7EEFF">

    <ImageView
        android:id="@+id/child_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/child_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x10"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/child_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/child_icon" />

</com.example.minedemo.widget.LuckyDrawChildWidget>